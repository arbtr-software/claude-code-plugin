{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'script=$(find ~/.claude -path \"*/arbtr/hooks/session-start.sh\" 2>/dev/null | head -1); [ -x \"$script\" ] && \"$script\"'",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'script=$(find ~/.claude -path \"*/arbtr/hooks/post-write.sh\" 2>/dev/null | head -1); [ -x \"$script\" ] && \"$script\"'",
            "timeout": 10000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'script=$(find ~/.claude -path \"*/arbtr/hooks/session-end.sh\" 2>/dev/null | head -1); [ -x \"$script\" ] && \"$script\"'",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}
